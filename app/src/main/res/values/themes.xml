<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Mandadito" parent="android:Theme.Material.Light.NoActionBar"/>

    <!-- Tema personalizado para splash screen sin splash screen por defecto -->
    <style name="Theme.Mandadito.Splash" parent="android:Theme.Material.Light.NoActionBar">
        <!-- Color de fondo personalizado -->
        <item name="android:windowBackground">@drawable/logo_mandadito</item>
        <!-- Sin barra de estado -->
        <item name="android:windowFullscreen">true</item>
        <!-- Sin barra de navegación -->
        <item name="android:windowNoTitle">true</item>
        <!-- Sin animaciones de transición del sistema -->
        <item name="android:windowDisablePreview">true</item>
    </style>

</resources>